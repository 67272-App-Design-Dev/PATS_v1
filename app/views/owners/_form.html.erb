<%= simple_form_for(@owner) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-inputs">
      <%= f.input :first_name %>
      <%= f.input :last_name, label_html: { class: 'active' } %>
      <%= f.input :street, label_html: { class: 'active' } %>
      <%= f.input :city, label_html: { class: 'active' } %>
      <%# f.input :state, label_html: { class: 'active' } %>
      <%= f.input :state, collection: Owner::STATES_LIST, include_blank: true %>
      <%= f.input :zip, label_html: { class: 'active' } %>
      <%= f.input :phone, label_html: { class: 'active' } %>
      <%= f.input :email, label_html: { class: 'active' } %>
      <%= f.input :active %>
    </div>
  </div>
  <div class="row">
    <div class="form-actions col s8">
      <%= f.button :submit %>
    </div>
  </div>
<% end %>
