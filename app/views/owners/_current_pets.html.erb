<div class="card">
  <div class="card-body">
    <h4 class="card-title"><%= @owner.first_name %>'s Pets</h4>
    <% if @current_pets.empty? %>
      <p>No pets at this time</p>
    <% else %>
      <table class="table table-striped table-hover table-borderless">
        <thead>
          <th>Name</th>
          <th>Animal</th>
        </thead>
        <% for pet in @current_pets %>
          <tr>
            <td><%= link_to pet.name, pet_path(pet) %></td>
            <td><%= pet.animal.name %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>