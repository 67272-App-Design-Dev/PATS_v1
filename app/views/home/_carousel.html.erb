<div id="animalCarousel" class="carousel slide carousel-height-250" data-bs-ride="carousel">
  <!-- Carousel indicators (optional) -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="5" aria-label="Slide 6"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="6" aria-label="Slide 7"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="7" aria-label="Slide 8"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="8" aria-label="Slide 9"></button>
    <button type="button" data-bs-target="#animalCarousel" data-bs-slide-to="9" aria-label="Slide 10"></button>
  </div>

  <!-- Carousel slides -->
  <div class="carousel-inner">
    <div class="carousel-item active">
      <a href="#one">
        <%= image_tag 'animals/kittens.jpg', class: 'd-block w-100', alt: 'Kittens' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#two">
        <%= image_tag 'animals/puppies.jpg', class: 'd-block w-100', alt: 'Puppies' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#three">
        <%= image_tag 'animals/bunnies.jpg', class: 'd-block w-100', alt: 'Bunnies' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#four">
        <%= image_tag 'animals/ferret1.jpg', class: 'd-block w-100', alt: 'Ferret' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#five">
        <%= image_tag 'animals/lovebirds.jpg', class: 'd-block w-100', alt: 'Lovebirds' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#six">
        <%= image_tag 'animals/kittens2.jpg', class: 'd-block w-100', alt: 'Kittens 2' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#seven">
        <%= image_tag 'animals/beagle-puppies.jpg', class: 'd-block w-100', alt: 'Beagle Puppies' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#eight">
        <%= image_tag 'animals/bunnies2.jpg', class: 'd-block w-100', alt: 'Bunnies 2' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#nine">
        <%= image_tag 'animals/ferret2.jpg', class: 'd-block w-100', alt: 'Ferret 2' %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="#ten">
        <%= image_tag 'animals/bird1.jpg', class: 'd-block w-100', alt: 'Bird' %>
      </a>
    </div>
  </div>

  <!-- Carousel controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#animalCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#animalCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>