<div class="card">
  <div class="card-body">
    <h4 class="card-title">Recent Visits</h4>
    <table class="table table-striped table-hover table-borderless">
      <thead>
        <th>Visit</th>
        <th>Weight</th>
      </thead>
        <% for visit in @recent_visits %>
          <tr>
            <td><%= link_to visit.date.strftime("%m/%d/%y"), visit_path(visit) %></td>
          <td>&nbsp;<%= visit.weight %> lbs</td>
          </tr>
        <% end %>
    </table>
  </div>
</div>