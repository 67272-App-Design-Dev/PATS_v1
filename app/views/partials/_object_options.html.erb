<p class="supertiny">&nbsp;</p>

<% opt = "#{object.respond_to?(:name) ? object.name : model_name.capitalize }" %>

<div class="form-actions">
  <%= link_to(eval("#{model_name.pluralize}_path"), class: 'btn btn-primary') do %>
    &nbsp;Display All <%# model_name.pluralize.capitalize %>
  <% end %>
  &nbsp;&nbsp;
  
  <%= link_to(eval("edit_#{model_name}_path(object)"), class: 'btn btn-secondary') do %>
      &nbsp;<%= "Edit #{opt}" %>
  <% end %>
  &nbsp;&nbsp;
  
  <%= link_to(eval("#{model_name}_path(object)"), method: 'delete', data: {confirm: "Are you sure you want to permanently delete #{opt}"}, class: 'btn btn-danger') do %>
      &nbsp;<%= "Delete #{opt}" %>
  <% end %>
</div>