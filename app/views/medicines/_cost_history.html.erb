<% unless @prices.empty? %>
  <div class="card shadow">
    <div class="card-body">
      <h4 class="card-title">Cost History</h4>
      <table class="table table-striped table-hover table-borderless">
      <thead>
        <th>Date</th>
        <th class="align_right">Cost Per Unit</th>
      </thead>
        <% for price in @prices %>
          <tr>
            <td><%= price.start_date.strftime("%b %d, %Y") %></td>
            <td class="align_right"><%= number_to_currency(price.cost_per_unit/100.0) %></td>
          </tr>
        <% end %>
    </table>
    </div>
    <div class="btn btn-link">
      <%= link_to "Add a new cost", new_medicine_cost_path(medicine_id: @medicine.id) %>
    </div>
  </div>
<% else %>
  <div class="card grey lighten-3">
    <div class="card-action">
      <%= link_to "Add a new cost", new_medicine_cost_path(medicine_id: @medicine.id) %>
    </div>
  </div>
<% end %>